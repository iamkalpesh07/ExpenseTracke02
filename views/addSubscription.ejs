<link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css">
<% layout("/layouts/boilerplate") %>

<div class="container mt-5">
  <div class="card p-4">
    <h2 class="mb-4">Add Subscription</h2>

    <form action="/subscription/add" method="POST">
      <div class="mb-3">
        <label for="name" class="form-label">Subscription Name</label>
        <input type="text" class="form-control" id="name" name="name" required placeholder="e.g. Netflix, Spotify">
      </div>

      <div class="mb-3">
        <label for="cost" class="form-label">Monthly Cost (â‚¹)</label>
        <input type="number" class="form-control" id="cost" name="cost" required placeholder="e.g. 299">
      </div>

      <button type="submit" class="btn btn-primary">Add Subscription</button>
      <a href="/dashboard" class="btn btn-secondary ms-2">Cancel</a>
    </form>
  </div>
</div>
